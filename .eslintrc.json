{
	"env": {
		"browser": true,
		"commonjs": true,
		"node": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 8
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"warn",
			"double",
			{
				"avoidEscape": true
			}
		],
		"semi": [
			"error",
			"always"
		],
		"array-bracket-newline": {
			"multiline": true
		},
		"brace-style": [
			"error",
			"1tbs",
			{
				"allowSingleLine": true
			}
		]
	}
}